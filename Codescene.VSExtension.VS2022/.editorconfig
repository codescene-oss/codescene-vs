# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
indent_style = tab

# SA1402: File may only contain a single type
# Set to none to allow multiple types in one file (e.g., for small helper classes)
dotnet_diagnostic.SA1402.severity = warning

# Disable some documentation rules by default
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1601.severity = none
dotnet_diagnostic.SA1602.severity = none
dotnet_diagnostic.SA1633.severity = none

# Other common StyleCop rules that might need adjustment
dotnet_diagnostic.SA1200.severity = none
dotnet_diagnostic.SA1309.severity = none
dotnet_diagnostic.SA1101.severity = none

# .NET Code Quality Rules (CA*)
# By default, all CA* rules enabled by AnalysisMode=Recommended will run
# Override specific rules here as needed

# Common rules that may need adjustment for Visual Studio extensions:
dotnet_diagnostic.CA1031.severity = suggestion  # Don't catch general exceptions
dotnet_diagnostic.CA1303.severity = none  # Don't pass literals as localized parameters
dotnet_diagnostic.CA1062.severity = suggestion  # Validate arguments of public methods
