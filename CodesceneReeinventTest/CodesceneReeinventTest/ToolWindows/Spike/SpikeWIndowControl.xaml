<UserControl x:Class="CodesceneReeinventTest.ToolWindows.Spike.SpikeWIndowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">

    <Grid Background="#FFFDFDFD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Button x:Name="BtnSendMessage"
                    Width="180"
                    Height="35"
                    Margin="0,0,0,15"
                    Background="#FFCCE5FF"
                    Click="BtnSendMessage_Click">
                Send message to web view
            </Button>
            <Label FontSize="14" Foreground="Black">Message from web viewer:</Label>

            <TextBlock x:Name="txtBlockMessage"
                       FontSize="14"
                       Foreground="Black"/>
        </StackPanel>

        <Border Grid.Row="1"
                Margin="10"
                CornerRadius="4">
            <Grid>
                <Rectangle Stroke="Red"
                           StrokeThickness="2"
                           StrokeDashArray="4,2"
                           RadiusX="4"
                           RadiusY="4" />

                <wv2:WebView2 x:Name="webView"
                              Margin="2" />
            </Grid>
        </Border>
    </Grid>
</UserControl>